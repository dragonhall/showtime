body {
  width: 1280px;
  height: 720px;
  background-size: 1280px 720px;
  //width: 1024px;
  //height: 576px;
  //background-size: 1024px 576px;
  background-repeat: no-repeat;
}

#wrapper {
  position: absolute;
  top: 0;
  left: 0;
  margin: 0;
  width: 1280px;
  height: 720px;
}

#heading {
  font-size: 42pt;
  margin: 20px 0 120px 0;
  text-align: center;
}

#schedule_wrapper {
  margin-left: 250px;
  //width: 780px;
}

ul {
  list-style: none;
  margin: 0;
  padding: 0;
  width: 470px;
  float: left;


  &:first-child {
    margin-right: 40px;
  }

  & > li {
    margin-top: 10px;
    &:first-child {
      margin-top: 0;
    }
  }
}


.time {
  color: #1564c6;
}

footer {
  position: absolute;
  bottom: 10px;
  right: 80px;
}

